{
  "compilerOptions": {
    "target": "ES2024",
  "module": "ESNext",
  "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@core/*": ["packages/core/*"],
      "@db/*": ["packages/db/*"]
    }
  }
}